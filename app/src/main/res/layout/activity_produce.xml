<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">

    <include layout="@layout/titlebar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/white"
        android:padding="@dimen/margin_large">

    </LinearLayout>

    <TextView
        style="@style/MyText"
        android:padding="@dimen/margin_large"
        android:text="商标预览如下："
        android:textColor="@color/white" />

    <LinearLayout
        android:id="@+id/ll_shangbiao"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/margin_huge">

        <TextView
            style="@style/MyText.Huge"
            android:text="产品合格证"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_large"
            android:orientation="vertical">
            <!--android:layout_marginTop="@dimen/margin_large"-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/MyText"
                        android:text="品名："
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView"
                        style="@style/MyText"
                        android:text="温度传感器" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/MyText"
                        android:text="生产日期："
                        android:textStyle="bold" />

                    <TextView
                        style="@style/MyText"
                        android:text="2018年 12月 18日" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                style="@style/MyText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="请生成二维码" />

            <ImageView
                android:id="@+id/iv_qrcode"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/MyText"
                    android:text="设备号："
                    android:textStyle="bold" />

                <TextView
                    style="@style/MyText"
                    android:text="100000023" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:orientation="horizontal">

                <TextView
                    style="@style/MyText"
                    android:text="验证码："
                    android:textStyle="bold" />

                <TextView
                    style="@style/MyText"
                    android:text="SEGDFH" />

            </LinearLayout>


            <TextView
                style="@style/MyText.Small"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/margin_small"
                android:text="重庆褀璨科技股份有限公司" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
