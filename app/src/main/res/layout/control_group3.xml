<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_control_group3"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/ll_jizhongqing"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/griditem_bg"
        android:gravity="center"
        android:onClick="onClick"
        android:orientation="vertical">

        <ImageView
            style="@style/Icon.40dp"
            android:src="@drawable/collector" />

        <TextView
            style="@style/MyText"
            android:layout_marginTop="@dimen/menuMarginTop"
            android:text="集中器" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_add_device"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/griditem_bg"
        android:gravity="center"
        android:onClick="onClick"
        android:orientation="vertical">

        <ImageView
            style="@style/Icon.40dp"
            android:src="@drawable/device" />

        <TextView
            style="@style/MyText"
            android:layout_marginTop="@dimen/menuMarginTop"
            android:text="采集器" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_control_device"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/griditem_bg"
        android:gravity="center"
        android:onClick="onClick"
        android:orientation="vertical">

        <ImageView
            style="@style/Icon.40dp"
            android:src="@drawable/control_device" />

        <TextView
            style="@style/MyText"
            android:layout_marginTop="@dimen/menuMarginTop"
            android:text="控制器" />
    </LinearLayout>

</LinearLayout>