<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg"
    android:orientation="vertical">
    <!-- 顶部titleBar-->
    <include layout="@layout/titlebar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout style="@style/MenuGroupWrapper">

                <RelativeLayout
                    style="@style/MenuWrapper"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/ll_scan"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal"
                        android:padding="8dp">

                        <ImageView
                            style="@style/Menu_Icon"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/scan"
                            android:tint="@color/text_light" />

                    </LinearLayout>

                    <EditText
                        android:id="@+id/edt_device_id"
                        style="@style/MyText"
                        android:layout_width="match_parent"
                        android:layout_toLeftOf="@id/ll_scan"
                        android:hint="设备编号（见产品标签，扫码或手动输入）"
                        android:inputType="number"
                        android:text="" />

                </RelativeLayout>

                <View style="@style/SplitLine.WithMargin" />

                <LinearLayout
                    style="@style/MenuWrapper"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/edt_output_bit"
                        style="@style/MyText"
                        android:layout_width="match_parent"
                        android:hint="对应输出位（从1开始）"
                        android:inputType="number"
                        android:text="" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                style="@style/MenuGroupWrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/itemMargin">

                    <TextView
                        android:id="@+id/tv_item1"
                        style="@style/MyText"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:background="@drawable/item_unselected"
                        android:gravity="center"
                        android:padding="@dimen/text_padding"
                        android:text="温度" />

                    <TextView
                        android:id="@+id/tv_item2"
                        style="@style/MyText"
                        android:layout_width="0dp"
                        android:layout_marginLeft="@dimen/itemMargin"
                        android:layout_weight="1"
                        android:background="@drawable/item_unselected"
                        android:gravity="center"
                        android:padding="@dimen/text_padding"
                        android:text="湿度" />

                    <TextView
                        android:id="@+id/tv_item3"
                        style="@style/MyText"
                        android:layout_width="0dp"
                        android:layout_marginLeft="@dimen/itemMargin"
                        android:layout_weight="1"
                        android:background="@drawable/item_unselected"
                        android:gravity="center"
                        android:padding="@dimen/text_padding"
                        android:text="通风" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/itemMargin"
                    android:paddingRight="@dimen/itemMargin">

                    <TextView
                        android:id="@+id/tv_item4"
                        style="@style/MyText"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:background="@drawable/item_unselected"
                        android:gravity="center"
                        android:padding="@dimen/text_padding"
                        android:text="补光" />

                    <TextView
                        android:id="@+id/tv_item5"
                        style="@style/MyText"
                        android:layout_width="0dp"
                        android:layout_marginLeft="@dimen/itemMargin"
                        android:layout_weight="1"
                        android:background="@drawable/item_unselected"
                        android:gravity="center"
                        android:padding="@dimen/text_padding"
                        android:text="遮阳" />

                    <TextView
                        android:id="@+id/tv_item6"
                        style="@style/MyText"
                        android:layout_width="0dp"
                        android:layout_marginLeft="@dimen/itemMargin"
                        android:layout_weight="1"
                        android:background="@drawable/item_unselected"
                        android:gravity="center"
                        android:padding="@dimen/text_padding"
                        android:text="卷帘" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/itemMargin">

                    <TextView
                        android:id="@+id/tv_item7"
                        style="@style/MyText"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:background="@drawable/item_unselected"
                        android:gravity="center"
                        android:padding="@dimen/text_padding"
                        android:text="水帘" />

                    <TextView
                        android:id="@+id/tv_item8"
                        style="@style/MyText"
                        android:layout_width="0dp"
                        android:layout_marginLeft="@dimen/itemMargin"
                        android:layout_weight="1"
                        android:background="@drawable/item_unselected"
                        android:gravity="center"
                        android:padding="@dimen/text_padding"
                        android:text="二氧化碳" />

                    <TextView
                        android:id="@+id/tv_item9"
                        style="@style/MyText"
                        android:layout_width="0dp"
                        android:layout_marginLeft="@dimen/itemMargin"
                        android:layout_weight="1"
                        android:background="@drawable/item_unselected"
                        android:gravity="center"
                        android:padding="@dimen/text_padding"
                        android:text="氧气" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout style="@style/MenuGroupWrapper">

                <RelativeLayout
                    android:id="@+id/rl_control_sys"
                    style="@style/MenuWrapper"
                    android:layout_height="55dp">

                    <ImageView
                        android:id="@+id/iv_balance_arrow"
                        style="@style/ArrowRight"
                        android:layout_centerVertical="true" />

                    <TextView
                        style="@style/MenuText"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text="控制系统" />

                    <TextView
                        android:id="@+id/tv_farm_name"
                        style="@style/MyText"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@id/iv_balance_arrow"
                        android:gravity="right"
                        android:text="请选择" />

                </RelativeLayout>

                <View style="@style/SplitLine.WithMargin" />

                <RelativeLayout
                    android:id="@+id/rl_type"
                    style="@style/MenuWrapper"
                    android:layout_height="55dp">

                    <ImageView
                        android:id="@+id/iv_type_arrow"
                        style="@style/ArrowRight"
                        android:layout_centerVertical="true" />

                    <TextView
                        style="@style/MenuText"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text="控制类型" />

                    <TextView
                        android:id="@+id/tv_type_name"
                        style="@style/MyText"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@id/iv_type_arrow"
                        android:gravity="right"
                        android:text="请选择" />

                </RelativeLayout>

                <View style="@style/SplitLine.WithMargin" />

                <RelativeLayout
                    android:id="@+id/rl_func"
                    style="@style/MenuWrapper"
                    android:layout_height="55dp">

                    <ImageView
                        android:id="@+id/iv_func_arrow"
                        style="@style/ArrowRight"
                        android:layout_centerVertical="true" />

                    <TextView
                        style="@style/MenuText"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text="控制功能" />

                    <TextView
                        android:id="@+id/tv_func_name"
                        style="@style/MyText"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@id/iv_func_arrow"
                        android:gravity="right"
                        android:text="请选择" />

                </RelativeLayout>

            </LinearLayout>

            <Button
                android:id="@+id/btn_config"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="15dp"
                android:background="@drawable/roundbtn_bg"
                android:text="控制终端配置"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="120dp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
