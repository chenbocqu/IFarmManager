<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_control_group4"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/griditem_bg"
        android:gravity="center"
        android:onClick="onClick"
        android:orientation="vertical">

        <ImageView
            style="@style/Icon.40dp"
            android:src="@drawable/wfm_sys" />

        <TextView
            style="@style/MyText"
            android:layout_marginTop="@dimen/menuMarginTop"
            android:text="添加水肥系统" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_control_sys"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/griditem_bg"
        android:gravity="center"
        android:onClick="onClick"
        android:orientation="vertical">

        <ImageView
            style="@style/Icon.40dp"
            android:src="@drawable/control_sys" />

        <TextView
            style="@style/MyText"
            android:layout_marginTop="@dimen/menuMarginTop"
            android:text="添加控制系统" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_ifm_setting"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/griditem_bg"
        android:gravity="center"
        android:onClick="onClick"
        android:orientation="vertical">

        <ImageView
            style="@style/Icon.40dp"
            android:src="@drawable/setting" />

        <TextView
            style="@style/MyText"
            android:layout_marginTop="@dimen/menuMarginTop"
            android:text="设置" />
    </LinearLayout>

</LinearLayout>